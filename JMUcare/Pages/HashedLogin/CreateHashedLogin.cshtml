@page
@model JMUcare.Pages.Dataclasses.HashedLogin.CreateHashedLoginModel
@{
    ViewData["Title"] = "Create Hashed Login";
}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Create New User</h4>
                </div>
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="UserRoleID" class="control-label">Select User Role</label>
                            <select asp-for="UserRoleID" class="form-control">
                                <option value="">-- Select Role --</option>
                                <option value="1">Admin</option>
                                <option value="2">Contributor</option>
                                <option value="3">Viewer</option>
                            </select>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="FirstName" class="control-label">First Name</label>
                            <input asp-for="FirstName" class="form-control" placeholder="Enter First Name" />
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="LastName" class="control-label">Last Name</label>
                            <input asp-for="LastName" class="form-control" placeholder="Enter Last Name" />
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="Enter Email" />
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Username" class="control-label">Enter Username</label>
                            <input asp-for="Username" class="form-control" placeholder="Enter Username" />
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="Password" class="control-label">Enter Password</label>
                            <input asp-for="Password" class="form-control" type="password" placeholder="Enter Password" />
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="UpdatedAt" class="control-label">Updated At</label>
                            <input asp-for="UpdatedAt" class="form-control" type="datetime-local" />
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="IsArchived" class="control-label">Is Archived</label>
                            <select asp-for="IsArchived" class="form-control">
                                <option value="0">No</option>
                                <option value="1">Yes</option>
                            </select>
                        </div>
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary w-100">Create User</button>
                        </div>
                    </form>
                    <div class="mt-3">
                        @if (ViewData["UserCreate"] != null)
                        {
                            <p class="text-success">@ViewData["UserCreate"]</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
