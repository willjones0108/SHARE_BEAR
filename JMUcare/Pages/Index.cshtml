@page
@model JMUcare.Pages.IndexModel
@using JMUcare.Pages.DBclass

@{
    ViewData["Title"] = "Home Dashboard";
}

<div class="container-fluid dashboard-container">
    <!-- Welcome Banner -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="welcome-banner card shadow">
                <div class="card-body">
                    <h2 class="welcome-title">Welcome back, @Model.CurrentUsername</h2>
                    <p class="welcome-subtitle">JMUcare Dashboard</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Calendar Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">Calendar</h4>
                </div>
                <div class="card-body">
                    <div id="calendar" class="calendar-container"></div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grants and Projects Sections -->
    <div class="row">
        <!-- Grants Section (Non-Active) -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header">
                    <h4 class="mb-0">My Grants</h4>
                </div>
                <div class="card-body">
                    @{
                        // Filter to show only non-active grants
                        var pendingGrants = Model.Grants?.Where(g => g.Status != "Active").ToList();
                    }

                    @if (pendingGrants != null && pendingGrants.Any())
                    {
                        <div class="list-group">
                            @foreach (var grant in pendingGrants)
                            {
                                <a asp-page="/Grants/View" asp-route-id="@grant.GrantID" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@grant.GrantTitle</h5>
                                        <span class="badge bg-primary">@grant.Status</span>
                                    </div>
                                    <p class="mb-1">@(grant.Description?.Length > 100 ? grant.Description.Substring(0, 97) + "..." : grant.Description ?? "No description available")</p>
                                    <small>Funding: $@grant.Amount.ToString("N0")</small>
                                </a>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a asp-page="/Grants/Index" class="btn btn-outline-primary">View All Grants</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-clipboard-x" style="font-size: 2.5rem; color: #ccc;"></i>
                            <p class="mt-3">No pending grants available</p>
                            @if (Model.IsAdmin)
                            {
                                <a asp-page="/Grants/CreateGrant" class="btn btn-primary">
                                    <i class="bi bi-plus-circle"></i> Create New Grant
                                </a>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Projects Section (Active Grants) -->
        <div class="col-md-6 mb-4">
            <div class="card shadow h-100">
                <div class="card-header">
                    <h4 class="mb-0">My Projects</h4>
                </div>
                <div class="card-body">
                    @{
                        // Filter to show only active grants as projects
                        var activeProjects = Model.Grants?.Where(g => g.Status == "Active").ToList();
                    }

                    @if (activeProjects != null && activeProjects.Any())
                    {
                        <div class="list-group">
                            @foreach (var project in activeProjects)
                            {
                                <a asp-page="/Grants/View" asp-route-id="@project.GrantID" class="list-group-item list-group-item-action">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h5 class="mb-1">@project.GrantTitle</h5>
                                        <span class="badge bg-success">Active Project</span>
                                    </div>
                                    <p class="mb-1">@(project.Description?.Length > 100 ? project.Description.Substring(0, 97) + "..." : project.Description ?? "No description available")</p>
                                    <small>Funding: $@project.Amount.ToString("N0")</small>
                                </a>
                            }
                        </div>
                        <div class="text-center mt-3">
                            <a asp-page="/Projects/Index" class="btn btn-outline-success">View All Projects</a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-kanban" style="font-size: 2.5rem; color: #ccc;"></i>
                            <p class="mt-3">No active projects</p>
                            <p class="text-muted">Projects appear when grants become active</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions Section -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card shadow">
                <div class="card-header">
                    <h4 class="mb-0">Quick Actions</h4>
                </div>
                <div class="card-body text-center">
                    <div class="d-flex justify-content-around">
                        @if (Model.IsAdmin)
                        {
                            <a asp-page="/Grants/CreateGrant" class="btn btn-primary mx-2">
                                <i class="bi bi-plus-circle"></i> New Grant
                            </a>
                        }
                        <a href="#" onclick="window.print(); return false;" class="btn btn-outline-secondary mx-2">
                            <i class="bi bi-printer"></i> Print Dashboard
                        </a>
                        <a asp-page="/HashedLogin/Logout" class="btn btn-outline-danger mx-2">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dashboard initialization
        $(document).ready(function() {
            // Highlight the current navigation item
            $('a[href="/Index"]').addClass('active');

            // Calendar initialization
            try {
                $('#calendar').fullCalendar({
                    header: {
                        left: 'prev,next today',
                        center: 'title',
                        right: 'month,agendaWeek,agendaDay'
                    },
                    height: 450,
                    editable: false,
                    eventLimit: true
                });
            } catch (e) {
                console.log("Calendar library not loaded. Please include FullCalendar or similar library.");
                $('#calendar').html('<div class="text-center py-5"><p>Calendar functionality requires additional libraries.</p></div>');
            }
        });
    </script>
}
